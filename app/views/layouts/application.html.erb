<!DOCTYPE html>
<html>
<head>
<title>Shoutr</title>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>
</head>
<body>

<% if signed_in? %>
  <aside>
    <font size=6> 
      <%= "Welcome " %>
      <%= link_to "#{current_user.username.capitalize}", current_user %><br>
    </font>
    <%= link_to "Sign out", session_path, method: :delete %>
    <br>
    <fieldset>
      <%= form_tag search_path, method: :get do %>
        <%= search_field_tag :query, params[:query], placeholder: "Enter Search Terms" %>
        <%= submit_tag "Search" %>
      <% end %>
    </fieldset>
    <br>
  </aside>
<% else %>
  <aside>
    <%= link_to "Sign in", new_session_path %>
    <%= link_to "Sign up", new_user_path %>
  </aside>
<% end %>

<%= yield %>

</body>
</html>
